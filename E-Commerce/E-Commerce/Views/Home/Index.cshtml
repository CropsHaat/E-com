			<div class="row small-gutters">
				@foreach(ProductsModel products in Model.TopSellingProducts){


					 <div class="col-6 col-md-4 col-xl-3">
					<div class="grid_item">
						<figure>
							<span class="ribbon off">- @products.DiscountRatio %</span>
							<a href=~/products/details/@products.ProductId>
								<img class="img-fluid lazy" src="~/img/products/@products.ProductId Bowl.png" alt="">
